<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Calculadora" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black2</item>
        <item name="colorPrimaryContainer">@color/black3</item>
        <item name="colorOnPrimary">@color/white_font</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white2</item>
        <item name="colorSecondaryContainer">@color/white3</item>
        <item name="colorOnSecondary">@color/black_font</item>
    </style>

    <style name="VISOR">
        <item name="android:background">@drawable/shape_visor_light</item>
    </style>

    <style name="BG">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="COLOR_TEXT_OPAC">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BASE_BUTTON" parent="COLOR_TEXT_OPAC">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BTN" parent="BASE_BUTTON">
        <item name="android:background">@drawable/shape_btn_default</item>
    </style>

    <style name="BTN_OPERATORS" parent="BASE_BUTTON">
        <item name="android:background">@drawable/shape_btn_lightblue</item>
        <item name="android:textColor">@color/light_blue3</item>
    </style>

    <style name="BTN_AC" parent="BASE_BUTTON">
        <item name="android:background">@drawable/shape_btn_pink</item>
        <item name="android:textColor">@color/pink3</item>
    </style>

    <style name="BTN_EQUAL" parent="BASE_BUTTON">
        <item name="android:background">@drawable/shape_btn_blue</item>
        <item name="android:textColor">@color/blue3</item>
    </style>
</resources>