<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eerie_black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/visor"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:background="@drawable/radius_bg_visor">

        <TextView
            android:id="@+id/calculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:textColor="@color/platinum"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.874"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.597"
            tools:text="3+4" />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/french_grey"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.891"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculo"
            app:layout_constraintVertical_bias="0.0"
            tools:text="7" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp">

        <TableRow
            android:id="@+id/linha_1"
            style="@style/tableRow">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/ce"
                android:text="CE"
                android:background="@drawable/circle_bg_button_charcoal"
                />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/abre_parentese"
                android:text="("
                android:background="@drawable/circle_bg_button_feldgrau" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/fecha_parentese"
                android:text=")"
                android:background="@drawable/circle_bg_button_feldgrau" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/divisao"
                android:text="รท"
                android:background="@drawable/circle_bg_button_feldgrau" />
        </TableRow>

        <TableRow
            android:id="@+id/linha_2"
            style="@style/tableRow">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/sete"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/oito"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/nove"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/multiplicacao"
                android:text="ร"
                android:background="@drawable/circle_bg_button_feldgrau" />
        </TableRow>

        <TableRow
            android:id="@+id/linha_3"
            style="@style/tableRow">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/quatro"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/cinco"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/seis"
                android:text="6"/>

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/subtracao"
                android:text="-"
                android:background="@drawable/circle_bg_button_feldgrau" />
        </TableRow>

        <TableRow
            android:id="@+id/linha_4"
            style="@style/tableRow">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/um"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/dois"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/tres"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/soma"
                android:text="+"
                android:background="@drawable/circle_bg_button_feldgrau"/>
        </TableRow>

        <TableRow
            android:id="@+id/linha_5"
            style="@style/tableRow">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/zero"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/ponto_virgula"
                android:text="," />

            <ImageButton
                style="@style/base_botao_teclado"
                android:id="@+id/apagar"
                android:src="@drawable/ic_backspace_24" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/base_botao_teclado"
                android:id="@+id/igual_resultado"
                android:text="="
                android:background="@drawable/circle_bg_button_calpolygreen"/>
        </TableRow>

    </TableLayout>


</LinearLayout>